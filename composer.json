{
  "name": "oligus/schema",
  "description": "Object oriented GraphQL schema",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "oligus",
      "email": "oli.gustafsson@gmail.com"
    }
  ],
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html tests/coverage",
    "lint": "phpcs src",
    "lint-fix": "phpcbf src",
    "md": "phpmd src text phpmd.xml",
    "md-xml": "phpmd src xml phpmd.xml",
    "analyze": "phan --color --progress-bar",
    "analyze-noop": "phan --no-progress-bar"
  },
  "require": {
    "php": ">=7.3",
    "doctrine/collections": "^1.5",
    "myclabs/php-enum": "^1.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "spatie/phpunit-snapshot-assertions": "3.0",
    "squizlabs/php_codesniffer": "^3.3",
    "symfony/var-dumper": "^5.0",
    "phan/phan": "^1.1",
    "phpmd/phpmd": "^2.8"
  },
  "autoload": {
    "psr-4": {
      "GQLSchema\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GQLSchema\\Tests\\": "tests",
      "GQLSchema\\E2E\\": "tests/e2e"
    }
  }
}
